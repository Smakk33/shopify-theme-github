{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign timer_positionn = section.settings.timer_positionn
-%}

{%- style -%}
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px !important;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px !important;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}px;
    padding-right: {{ padding_horizontal_mobile }}px;
  }
  
  @media(min-width: 1024px) {
    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px !important;
      margin-bottom: {{ margin_bottom }}px !important;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}px;
      padding-right: {{ padding_horizontal }}px;
    }
  }
  
{%- endstyle -%}

{% for block in section.blocks %}
  {% case block.type %}
    {% when 'timer' %}
      <style>
        {{  block.settings.heading_font | font_face: font_display: 'swap' }}
        {{  block.settings.number_font | font_face: font_display: 'swap' }}
        {{  block.settings.completed_text_font | font_face: font_display: 'swap' }}
        {{  block.settings.timer_text_font | font_face: font_display: 'swap' }}

        .countdown-timer-wrapper-{{ block.id }} {
          background: {{ block.settings.wrapper_bg_color}};
          border-radius: {{ block.settings.wrapper_radius }}px;
          display: flex;
          flex-direction: column;
          padding: {{ block.settings.wrapper_padding_vertical_mobile }}px {{ block.settings.wrapper_padding_horizontal_mobile }}px;
        }

        .countdown-timer-heading-{{ block.id }} {
          margin: 0;
          display: block;
          text-transform: unset;
          word-wrap: break-word;
          font-weight: 700;
          font-size: {{ block.settings.heading_size_mobile }}px;
          line-height: {{ block.settings.heading_height }}%;
          color: {{ block.settings.heading_color }};
        }
        
        .countdown-timer-timer-{{ block.id }} {
          margin-top: {{ block.settings.timer_mt_mobile }}px;
          display: flex;
          align-items: first baseline;
          gap: {{ block.settings.timer_gap_mobile }}px;
          flex-wrap: wrap;
        }

        .countdown-timer-timer-{{ block.id }} .time-block {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          text-align: center;
        }

        .countdown-timer-timer-{{ block.id }} .time-block__num {
          margin: 0;
          font-size: {{ block.settings.number_size_mobile }}px;
          color: {{ block.settings.number_color }};
          line-height: {{ block.settings.number_height }}%;
          text-transform: unset;
          font-weight: 700;
        }
        
        .countdown-timer-timer-{{ block.id }} .time-block__unit {
          margin: 0;    
          font-size: {{ block.settings.timer_text_size_mobile }}px;
          color: {{ block.settings.timer_text_color }};
          line-height: {{ block.settings.timer_text_height }}%;
          text-transform: unset;
        }

        .countdown-timer-timer-{{ block.id }} .time-block__unit.colons {
          font-size: {{ block.settings.number_size_mobile | times: 0.8 }}px;
        }

        .countdown-timer-completed-text-{{ block.id }} {
          display: none;
          position: relative;    
        }

        .countdown-timer-completed-text-{{ block.id }} * {
          margin: 16px 0;
          font-size: {{ block.settings.completed_text_size_mobile }}px;
          color: {{ block.settings.completed_text_color }};
          line-height: {{ block.settings.completed_text_height }}%;
          text-transform: unset;
        }
        @media (min-width: 1024px) {
          .countdown-timer-wrapper-{{ block.id }} {
            padding: {{ block.settings.wrapper_padding_vertical }}px {{ block.settings.wrapper_padding_horizontal }}px;
            align-items: {{ block.settings.wrapper_align }};
          }

          .countdown-timer-heading-{{ block.id }} {
            font-size: {{ block.settings.heading_size }}px;
          }

          .countdown-timer-timer-{{ block.id }} {
            margin-top: {{ block.settings.timer_mt }}px;
            gap: {{ block.settings.timer_gap }}px;
          }
        
          .countdown-timer-timer-{{ block.id }} .time-block__num {
            font-size: {{ block.settings.number_size }}px;
          }

          .countdown-timer-timer-{{ block.id }} .time-block__unit {
            font-size: {{ block.settings.timer_text_size }}px;
          }

          .countdown-timer-timer-{{ block.id }} .time-block__unit.colons {
            font-size: {{ block.settings.number_size | times: 0.8 }}px;
          }

          .countdown-timer-completed-text-{{ block.id }} * {
            font-size: {{ block.settings.completed_text_size }}px;
          }
        }        
      </style>
      {% if block.settings.heading_custom %}
        <style>
          .countdown-timer-heading-{{ block.id }} {
            font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
            font-weight: {{ block.settings.heading_font.weight }};
            font-style: {{ block.settings.heading_font.style }};
          }
        </style>
      {% endif %}
      
      {% if block.settings.number_custom %}
        <style>
          .countdown-timer-timer-{{ block.id }} .time-block__num {
            font-family: {{ block.settings.number_font.family }}, {{ block.settings.number_font.fallback_families }};
            font-weight: {{ block.settings.number_font.weight }};
            font-style: {{ block.settings.number_font.style }};
          }
        </style>
      {% endif %}
      
      {% if block.settings.timer_text_custom %}
        <style>
          .countdown-timer-timer-{{ block.id }} .time-block__unit {
            font-family: {{ block.settings.timer_text_font.family }}, {{ block.settings.timer_text_font.fallback_families }};
            font-weight: {{ block.settings.timer_text_font.weight }};
            font-style: {{ block.settings.timer_text_font.style }};
          }
        </style>
      {% endif %}
    
      {% if block.settings.completed_text_custom %}
        <style>
          .countdown-timer-completed-text-{{ block.id }} * {
            font-family: {{ block.settings.completed_text_font.family }}, {{ block.settings.completed_text_font.fallback_families }};
            font-weight: {{ block.settings.completed_text_font.weight }};
            font-style: {{ block.settings.completed_text_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.wrapper_align_mobile == "center" %}
        <style>
          .countdown-timer-wrapper-{{ block.id }} {
            align-items: center;
          }
        </style>
      {% elsif block.settings.wrapper_align_mobile == "left" %}
        <style>
          .countdown-timer-wrapper-{{ block.id }} {
            align-items: start;
          }
        </style>
      {% else %}
        <style>
          .countdown-timer-wrapper-{{ block.id }} {
            align-items: end;
          }
        </style>
      {% endif %} 

      {% if block.settings.wrapper_align == "center" %}
        <style>
          @media (min-width: 1024px) {
            .countdown-timer-wrapper-{{ block.id }} {
              align-items: center;
            }
          }          
        </style>
      {% elsif block.settings.wrapper_align == "left" %}
        <style>
          @media (min-width: 1024px) {
            .countdown-timer-wrapper-{{ block.id }} {
              align-items: start;
            }
          }          
        </style>
      {% else %}
        <style>
          @media (min-width: 1024px) {
            .countdown-timer-wrapper-{{ block.id }} {
              align-items: end;
            } 
          }          
        </style>
      {% endif %} 
      
    {% when 'form' %}
      <style>
        {{  block.settings.input_font | font_face: font_display: 'swap' }}
        {{  block.settings.form_text_font | font_face: font_display: 'swap' }}
        {{  block.settings.button_font | font_face: font_display: 'swap' }}  
        .countdown-timer-text-{{ block.id }} {
          margin: 0;
          margin-top: {{ block.settings.form_text_mt_mobile }}px;
          text-align: {{ block.settings.form_text_align_mobile }};
          font-size: {{ block.settings.form_text_size_mobile }}px;
          color: {{ block.settings.form_text_color }};
          line-height: {{ block.settings.form_text_height }}%;
          text-transform: unset;
        }

        
        .countdown-timer-row-{{ block.id }} {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 10px;
        }

        .countdown-timer-form-{{ block.id }} {
          margin-top: {{ block.settings.form_mt_mobile }}px;
        }

        .countdown-timer-form-{{ block.id }} form {
          width: 100%;
        }

        .countdown-timer-input-{{ block.id }} {
          word-wrap: break-word;
          margin: 0;
          background-color: {{ block.settings.input_bg_color }};
          font-size: {{ block.settings.input_size_mobile }}px;
          color: {{ block.settings.input_color }};
          line-height: {{ block.settings.input_height }}%;
          font-weight: 700;
          text-transform: unset;
          display: block;
          border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
          border-radius: {{ block.settings.input_radius }}px;
          padding: {{ block.settings.input_padding_vertical_mobile }}px {{ block.settings.input_padding_horizontal_mobile }}px;
          width: 100%;
        }

        .countdown-timer-input-{{ block.id }}::placeholder {
          font-weight: 400;
          color: {{ block.settings.input_placeholder_color }};
        }

        .countdown-timer-input-{{ block.id }}:focus,
        .countdown-timer-input-{{ block.id }}:focus-visible {
          outline: 0px;
          box-shadow: none;
        }

        .countdown-timer-button-{{ block.id }} {
          display: flex;
          align-items: center;
          justify-content: center;    
          gap: 10px;
          width: 100%;
          margin: 0;
          font-size: {{ block.settings.button_size_mobile }}px;
          color: {{ block.settings.button_color }};
          line-height: {{ block.settings.button_height }}%;
          text-align: center;
          text-transform: unset;
          text-decoration: none;
          padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
          border-radius: {{ block.settings.button_radius }}px;
          transition: all 0.3s ease 0s;
          background-color: transparent;
          border: 0px;
          cursor: pointer;
        }

        .countdown-timer-button-inner-{{ block.id }} {
          margin: 0px;
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 10px;
          text-decoration: none;
        }

        .countdown-timer-button-{{ block.id }}:hover {
          color: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        .countdown-timer-button-{{ block.id }} svg {
          width: 14px;
          height: 14px;
        }

        .countdown-timer-button-{{ block.id }} svg path {
          fill: {{ block.settings.button_color }};
          transition: all 0.25s ease 0s;
        }

        .countdown-timer-button-{{ block.id }}:hover svg path {
          fill: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }
      @media (min-width: 1024px) {
        .countdown-timer-text-{{ block.id }} {
          margin-top: {{ block.settings.form_text_mt }}px;
          text-align: {{ block.settings.form_text_align }};
          font-size: {{ block.settings.form_text_size }}px;
        }

        .countdown-timer-form-{{ block.id }} {
          margin-top: {{ block.settings.form_mt }}px;
        }

        .countdown-timer-row-{{ block.id }} {
          flex-direction: row;
        }

        .countdown-timer-input-{{ block.id }} {
          font-size: {{ block.settings.input_size }}px;
          padding: {{ block.settings.input_padding_vertical }}px {{ block.settings.input_padding_horizontal }}px;
        }
        
        .countdown-timer-button-{{ block.id }} {
          max-width: fit-content;
          padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
          font-size: {{ block.settings.button_size }}px;
        }
      }
      </style>
      {% if block.settings.form_text_custom %}
        <style>
          .countdown-timer-text-{{ block.id }} {
            font-family: {{ block.settings.form_text_font.family }}, {{ block.settings.form_text_font.fallback_families }};
            font-weight: {{ block.settings.form_text_font.weight }};
            font-style: {{ block.settings.form_text_font.style }};
          }
        </style>
      {% endif %}

      {% if block.settings.input_custom %}
        <style>
          .countdown-timer-input-{{ block.id }} {
            font-family: {{ block.settings.input_font.family }}, {{ block.settings.input_font.fallback_families }};
            font-weight: {{ block.settings.input_font.weight }};
            font-style: {{ block.settings.input_font.style }};
          }
        </style>
      {% endif %}  

      {% if block.settings.button_custom %}
        <style>
          .countdown-timer-button-{{ block.id }} {
            font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
            font-weight: {{ block.settings.button_font.weight }};
            font-style: {{ block.settings.button_font.style }};
          }
        </style>
      {% endif %}  

      {% if block.settings.button_style == "non_outline" or block.settings.button_style == "non_outline_arrow" %}
        <style>
          .countdown-timer-button-{{ block.id }} {
            background-color: {{ block.settings.button_bg_color }};
            transition: all 0.25s ease 0s;
          }

          .countdown-timer-button-{{ block.id }}:hover {
            transition: all 0.25s ease 0s;
            background-color: {{ block.settings.button_bg_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "outline" or block.settings.button_style == "outline_arrow" %}
        <style>
          .countdown-timer-button-{{ block.id }} {      
            background-color: {{ block.settings.button_bg_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
            transition: all 0.25s ease 0s;
          }

          .countdown-timer-button-{{ block.id }}:hover {
            transition: all 0.25s ease 0s;
            background-color: {{ block.settings.button_bg_hover_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "link" %}
        <style>
          .countdown-timer-button-{{ block.id }} {
            padding: 0px !important;
          }
        </style>
      {% endif %}
  {% endcase %} 
{% endfor %}

<script>
  (function () {
    function moreLoadProductForm() {
      var upsellForm = document.querySelector('#ss-countdown-timer-2');
      if (!upsellForm){
        var upsellForm = document.querySelector('{% if timer_positionn == "below_heading" or timer_positionn == "above_heading" %}.product__title{% elsif timer_positionn == "below_description" or timer_positionn == "above_description" %}.product__description{% elsif timer_positionn == "below_price" %}.price.price--large.price--show-badge{% else %}.button--add-to-cart, .product .product-form, .product-single__add-to-cart, .shopify-payment-button, .shopify-payment-button__button, .ProductForm__BuyButtons, .add-to-cart{% endif %}');
        if (!upsellForm) return;
        }
        const templateContent = document.querySelector(
          '#ss-countdown-timer-2-{{ section.id }}'
        ).content;

        upsellForm.insertAdjacentElement(
        '{% if timer_positionn == "below_buy" or timer_positionn == "below_heading" or timer_positionn == "below_description" or timer_positionn == "below_price" %}afterend{% else %}beforebegin{% endif %}',
          templateContent.firstElementChild
        );      
    }
    window.addEventListener('DOMContentLoaded', moreLoadProductForm);
  })();
</script>

